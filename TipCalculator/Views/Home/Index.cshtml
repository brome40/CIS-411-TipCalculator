@model TipCalculatorModel

@{
    ViewData["Title"] = "Tip Calculator";
}

<div class="container">
    <h1 class="mt-3 mb-4">@ViewBag.Title</h1>
    <form asp-action="Index" method="post">
        <div class="row">
            <label asp-for="MealCost" class="col-md-3 col-form-label">
                Subtotal:
            </label>
            <div class="col-md-3">
                <input asp-for="MealCost" class="form-control" />
            </div>
            <span asp-validation-for="MealCost"
                  class="col text-danger"></span>
        </div>
        <div class="row">
            <label class="col-md-3 col-form-label">15% Tip:</label>
            <label class="col-md-3">@ViewBag.Fifteen.ToString("C2")</label>
        </div>
        <div class="row">
            <label class="col-md-3 col-form-label">20% Tip:</label>
            <label class="col-md-3">@ViewBag.Twenty.ToString("C2")</label>
        </div>
        <div class="row">
            <label class="col-md-3 col-form-label">25% Tip:</label>
            <label class="col-md-3">@ViewBag.TwentyFive.ToString("C2")</label>
        </div>
        <div class="row">
            <div class="col offset-md-3">
                <button type="submit" class="btn btn-primary">
                    Calculate
                </button>
                <a asp-action="Index"
                   class="btn btn-outline-secondary">Clear</a>
            </div>
        </div>
    </form>
</div>
